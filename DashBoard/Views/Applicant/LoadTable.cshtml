@model IEnumerable<DashBoard.Models.ApplicantFormModel>
@{
    ViewBag.Title = "LoadTable";
}

<div class="row">
    <div class="x_panel">
        <div class="x_title">
            <h2>Абітурієнти | Таблиця</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
                <div style="overflow: scroll; height: 500px">
                    <table class="table">
                        <tr>
                            <th>№</th>
                            <th>Ім'я абітурієнта</th>
                            <th>Email</th>
                            <th>Телефон</th>
                            <th>Місце навчання</th>
                            <th>Адреса</th>
                            <th>Знайшов</th>
                        </tr>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var app in Model.OrderByDescending(p => p.ApplicantId))
                        {
                            <tr>
                                <td>@app.ApplicantId</td>
                                <td>@app.NameApplicant</td>
                                <td>@app.MailApplicant</td>
                                <td>@app.PhoneApplicant</td>
                                <td>@app.SchoolCollege</td>
                                <td>@app.Address</td>
                                <td>@app.NameFound</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

