@model IEnumerable<DashBoard.Models.UsersViewModel>

@{
    ViewBag.Title = "Список користувачів";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Список користувачів</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-striped table-bordered dataTable" id="datatable" role="grid">
                    <thead>
                    <tr>
                        <th>Логін</th>
                        <th>ФІО</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th></th>
                    </tr>
                    </thead>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@user.FullName</td>
                            <td>@user.Email <a href="#" style="float: right">(Написати)</a></td>
                            <td>@user.Phone</td>
                            <td><a href="#" style="display: block; text-align: center">Редагувати</a></td>
                        </tr>
                    }
                </table>
                <p>Завантажено @Model.Count()</p>
            </div>
        </div>
    </div>
</div>

