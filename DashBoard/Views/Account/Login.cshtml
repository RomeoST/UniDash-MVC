@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ua">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <!-- Bootstrap -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/Content/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="/Content/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="/Content/animate.min.css" rel="stylesheet">
    <!--PNotify-->
    <link href="/Content/pnotify.css" rel="stylesheet">
    <link href="/Content/pnotify.buttons.css" rel="stylesheet">
    <link href="/Content/pnotify.nonblock.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="/Content/custom.min.css" rel="stylesheet">
    
    <!--Custom Scrips-->
    <script src="/Scripts/dut-sys.js" type="text/javascript"></script>
</head>

<body class="login">
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
            @using (Ajax.BeginForm("Login", new {id = "login_ajax", role = "form"}, new AjaxOptions() {OnComplete = "loginComplete"}))
            {
                @Html.AntiForgeryToken()
                <h1>Авторизація</h1>
                <div id="errorList2"></div>
                @Html.TextBox("UserName", "", new {@class="form-control", placeholder="Логін"})
                @Html.Password("Password","",new {@class="form-control", placeholder="Пароль"})
                <div>
                    <input id="submitLogin" type="submit" name="submitLogin" value="Увійти" class="btn btn-default submit" Onclick="EnableOff()" />
                    <a class="reset_pass" href="#">Забули пароль?</a>
                </div>

                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">Вперше тут?
                        <a href="#signup" class="to_register"> Створити користувача </a>
                    </p>

                    <div class="clearfix"></div>
                    <br/>

                    <div>
                        <h1><i class="fa fa-paw"></i> Gentelella Alela!
                        </h1>
                        <p>©2017 All Rights Reserved. Gentelella Alela! Backend by Roman Kolesnyk. Privacy and Terms</p>
                    </div>
                </div>
            }
            </section>
        </div>

        <div id="register" class="animate registration_form">
            <section class="login_content">
                @using (Ajax.BeginForm("Register", new { id = "register_ajax", role="form" }, new AjaxOptions() { OnComplete = "regComplete"}))
                {
                    @Html.AntiForgeryToken()
                    <h1>Реєстрація</h1>
                    <div id="errorList"></div>
                    <h2>Вхідні дані</h2>
                    @Html.TextBox("UserName", "", new { @class = "form-control", placeholder="Логін" })
                    @Html.TextBox("Email", "", new { @class = "form-control", type = "email", placeholder="Email" })
                    @Html.Password("Password", "", new { @class = "form-control", placeholder="Пароль" })
                    @Html.Password("PasswordConfirm", "", new { @class = "form-control", placeholder="Підтвердження паролю" })
                    <h2>Персональні дані</h2>
                    @Html.TextBox("Name", "", new{ @class="form-control", placeholder="ФІО"})
                    @Html.DropDownList("Type", new List<SelectListItem>()
                    {
                        new SelectListItem { Text = "Оберіть свій тип", Selected = true, Value = "-1"},
                        new SelectListItem { Text = "Співробітник ДУТ", Value = "0"},
                        new SelectListItem { Text = "Студент", Value = "1"}
                    }, new {@class="form-control"})
                    <input type="submit" class="btn btn-default submit" value="Готово"/>
                @*<a id="register_submit" class="btn btn-default submit" href="">Готово</a>*@
                    <div class="clearfix"></div>
                    <div class="separator">
                        <p class="change_link">Вже зараєстрований ?
                            <a href="#signin" class="to_register"> Увійти </a>
                        </p>

                        <div class="clearfix"></div>
                        <br/>

                        <div>
                            <h1><i class="fa fa-paw"></i> Gentelella Alela!
                            </h1>
                            <p>©2017 All Rights Reserved. Gentelella Alela! Backend by Roman Kolesnyk. Privacy and Terms</p>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/Scripts/pnotify.js"></script>
    <script src="/Scripts/pnotify.buttons.js"></script>
    <script src="/Scripts/pnotify.nonblock.js"></script>
    <script>
        function EnableOff() {
            $("submitLogin").css("background-color", "grey");
        }
    </script>
</body>
</html>

